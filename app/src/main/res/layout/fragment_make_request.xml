<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.purdue.dbough.wya.MakeRequestFragment">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Your Friend Here"
            android:ems="10"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"/>
    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:layout_below="@+id/editText" android:layout_alignParentStart="true"/>
</RelativeLayout>
