<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.purdue.dbough.wya.CreateRequestFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Reason"
            android:ems="10"
            android:id="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Event Name"
            android:ems="10"
            android:layout_below="@+id/editText" android:layout_alignEnd="@+id/editText" android:id="@+id/editText3"/>
    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker" android:layout_below="@+id/editText3" android:layout_alignParentStart="true"/>
    <Button
            android:text="Send"
            android:onClick=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/timePicker"
            android:layout_centerHorizontal="true" android:layout_marginTop="43dp" android:id="@+id/sendRequestButton"/>
</RelativeLayout>
