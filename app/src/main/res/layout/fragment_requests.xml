<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.purdue.dbough.wya.RequestsFragment">

    <!-- Because we used the special android id empty,
    this only shows up if the listView has no content-->
    <TextView
            android:id="@+id/request_header"
            android:text="People who can alarm or open your GPS"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

    <TextView
            android:id="@android:id/empty"
            android:text="Nothing to show yet!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/request_header"
            android:layout_alignParentStart="true"/>

    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/request_header">
    </ListView>

</RelativeLayout>
