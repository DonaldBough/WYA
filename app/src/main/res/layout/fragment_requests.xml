<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="edu.purdue.dbough.wya.RequestsFragment">

    <!-- Because we used the special android id empty,
    this only shows up if the listView has no content-->
    <TextView
            android:id="@+id/request_header"
            android:text="People with access to you"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

    <TextView
            android:id="@android:id/empty"
            android:text="Nothing to show yet!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/request_header"
            android:layout_alignParentStart="true"/>

    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/request_header">
    </ListView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:onClick="onClickAddRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            android:src="@drawable/fab_ic_add"
            app:backgroundTint="@color/colorPrimary"
    />

</RelativeLayout>
