<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:app="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:id="@+id/entire_thumbnail"
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/friend_card_height"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:layout_centerHorizontal="true"
                         android:clickable="true"
                         android:scaleType="fitXY">

                <ImageView
                        android:id="@+id/outside_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@drawable/background"/>

                <!--Grabbed circular image-maker from https://github.com/lopspower/CircularImageView-->

                <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/inside_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/alicecooper_avatar"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="4dp"
                        app:civ_shadow="false"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/colorAccent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="55dp"
                        android:text="9.99"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/inside_profile"/>
                <TextView
                        android:id="@+id/miles_away"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:text="miles away" android:layout_alignTop="@+id/distance"
                        android:layout_toEndOf="@+id/distance"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/entire_thumbnail"
                    android:paddingLeft="15dp"
                    android:paddingRight="@dimen/friend_card_title_padding"
                    android:paddingTop="@dimen/friend_card_title_padding"
                    android:textColor="@color/album_title"
                    android:textSize="18dp"
                    android:text="Friend Name"
                    android:textStyle="bold"/>

            <ImageView
                    android:id="@+id/overflow"
                    android:layout_width="@dimen/ic_album_overflow_width"
                    android:layout_height="@dimen/ic_album_overflow_height"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/entire_thumbnail"
                    android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_dots" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>